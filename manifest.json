{
  "manifest_version": 2,
  "name": "Feeling-Lucky-Wiki",
  "version": "1.0",
  "description": "Redirects search queries containing the word 'wiki' through Google's 'I'm Feeling Lucky.",
  "homepage_url": "https://github.com/adelmonte/feeling-lucky-wiki",

    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "browser_action": {
        "default_icon": {
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png"
        },
        "default_title": "Feeling-Lucky-Wiki",
        "default_popup": "html/default/default.html"
    },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
     "storage",
     "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
